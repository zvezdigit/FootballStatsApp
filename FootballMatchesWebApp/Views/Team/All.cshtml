@using FootballMatchesWebApp.Application.Models.Teams
@model IEnumerable<TeamViewModel>
@{
    ViewData["Title"] = "Teams";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Football Teams</h3>
                <div class="card-tools">
                       <form asp-action="All" asp-controller="Team" method="post" >
                        <p>
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" placeholder = "Enter Team..." name="TeamName" class="form-control float-right" >
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    </p>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Team Id</th>
                            <th>Team Name</th>
                            <th>Team Code</th>
                            <th>Country</th>
                            <th>Founded</th>
                            <th>Venue Name</th>
                            <th>Players</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in @Model)
                        {
                            <tr>
                                <td>@team.TeamId</td>
                                <td>@team.Name</td>
                                <td>@team.Code</td>
                                 <td>@team.Country</td>
                                  <td>@team.Founded</td>
                                   <td>@team.Venue.VenueName</td>
                                   <td class="project-actions text-left">
                            <a class="btn btn-primary btn-sm" href="/Team/TeamPlayers?teamId=@team.TeamId">
                                <i class="fas fa-door-open">
                                </i>
                                Players
                            </a>
                        </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
