
@using FootballMatchesWebApp.Application.Models.Teams
@model IEnumerable<TeamPlayerViewModel>
@{
    ViewData["Title"] = "Teams";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Team Players</h3>
                <div class="card-tools">
                       <form asp-action="TeamPlayers" asp-controller="Team" method="post" >
                        <p>
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" placeholder = "Player Name..." name="PlayerName" class="form-control float-right" >
                        <input type="hidden" name="TeamId" value="@ViewBag.TeamId"  />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    </p>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Player Id</th>
                            <th>Player Name</th>
                            <th>Player Age</th>
                            <th>Nationality</th>
                            <th>Height</th>
                            <th>Weight</th>
                            <th>Injured</th>
                              <th>Player Stats</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in @Model)
                        {
                            <tr>
                                <td>@player.Id</td>
                                <td>@player.Name</td>
                                <td>@player.Age</td>
                                 <td>@player.Nationality</td>
                                  <td>@player.Height</td>
                                   <td>@player.Weight</td>
                                     <td>@player.Injured</td>
                                   <td class="project-actions text-left">
                            <a class="btn btn-block btn-warning" href="/Team/PlayerStats?playerId=@player.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Statistics
                            </a>
                        </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
